{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "python": "./venv_312/bin/python",
            "env": {
                "DATABRICKS_HOST": "${env:DATABRICKS_HOST}",
                "DATABRICKS_TOKEN": "${env:DATABRICKS_TOKEN}",
                "DATABRICKS_CLUSTER_ID": "${env:DATABRICKS_CLUSTER_ID}"
            }
        },
        {
            "name": "Python: Databricks Connect",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "python": "./venv_312/bin/python",
            "env": {
                "DATABRICKS_HOST": "${env:DATABRICKS_HOST}",
                "DATABRICKS_TOKEN": "${env:DATABRICKS_TOKEN}",
                "DATABRICKS_CLUSTER_ID": "${env:DATABRICKS_CLUSTER_ID}",
                "PYSPARK_PYTHON": "./venv_312/bin/python",
                "PYSPARK_DRIVER_PYTHON": "./venv_312/bin/python"
            }
        }
    ]
}

